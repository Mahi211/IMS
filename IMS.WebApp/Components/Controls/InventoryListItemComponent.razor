@if (inv is not null)
{

    <tr>
        <td>@inv.InventoryName</td>
        <td>@inv.Quantity</td>
        <td>@inv.Price.ToString("c")</td>
        <td>
            <button type="button"
            class="btn btn-light">
                Edit
            </button>
        </td>
    </tr>
}

@code{
    [Parameter]
    public Inventory? inv { get;set;}
}