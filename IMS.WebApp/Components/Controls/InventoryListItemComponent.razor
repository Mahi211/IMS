@if (inv is not null)
{

    <tr>
        <td>@inv.InventoryName</td>
        <td>@inv.Quantity</td>
        <td>@inv.Price.ToString("c")</td>
        <td>
            <a href="/editinventory/@inv.InventoryId" class="btn btn-light">
                Edit
            </a>
        </td>
    </tr>
}

@code{
    [Parameter]
    public Inventory? inv { get;set;}
}