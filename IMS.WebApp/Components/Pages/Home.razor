@page "/"
@inject IViewInventoriesByNameUseCase ViewInvetoriesByNameUseCase
@inject IEditInventoryUseCase EditInventoryUseCase

<PageTitle>Test</PageTitle>

<br/>
<br/>
<ul>
    @if (inventories is not null && inventories.Count > 0)
    {
        foreach(var inv in inventories)
        {
            <li>
                @inv.InventoryName
            </li>
        }
    }    
</ul>
@code{
    private List<Inventory>? inventories;

    protected override async Task OnInitializedAsync()
    {
        var inventory = new Inventory { InventoryId = 2, InventoryName = "Bike Seat", Quantity = 75, Price = 4 };
        await EditInventoryUseCase.ExecuteAsync(inventory);
        inventories = (await ViewInvetoriesByNameUseCase.ExecuteAsync()).ToList();
    }
}